<!DOCTYPE html>
<html>
  <head>
    <title>ECommerce</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="wrapper">
      <div class="d-flex">
        <%= render partial: "layouts/sidebar-admin" %> <!-- template-tarek should be modified later -->

        <% flash.each do |message_type, message| %>
          <div class="alert alert-<%= message_type %>" style="color: red"><%= message %></div>
        <% end %>
        
        <%= yield %>
      </div>
    </div>
  </body>
</html>
