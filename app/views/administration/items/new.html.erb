
<div class="main">
  <main class="content">
    <div class="container-fluid p-0">
      <div class="row">
        <div class="col-12 col-lg-6">

        <h4>Cr√©er <%= @item.name %> </h4>

        <div class="card-header">
          <h6 class="card-subtitle text-muted">Entrer un nouvel item dans le catalogue</h6>
                  
          <div class="card-body">

            <%= form_with scope: :item, url: administration_items_path, local: true do |f| %>
                <div class="form-group">
                  <%= f.label :name %> <br>
                  <%= f.text_field :name, class: 'form-control' %> <br>
                </div>
                <div class="form-group">
                  <%= f.label :description %> <br>
                  <%= f.text_field :description, class: 'form-control'  %> <br>
                </div>
                <div class="form-group">
                  <%= f.label :photo %> <br>
                  <%= f.text_field :photo, class: 'form-control'  %> <br>
                </div>
                <div class="form-group">
                  <%= f.label :original_price %> <br>
                  <%= f.text_field :original_price, class: 'form-control'  %> <br>
                </div>
                  <%= f.submit class: "btn btn-primary" %>
              <% end %>

          </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</div>