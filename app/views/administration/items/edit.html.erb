
<div class="main">
  <main class="content">
    <div class="container-fluid p-0">
      <div class="row">
        <div class="col-12 col-lg-6">

	      <h4>Modifier <%= @item.name %> </h4>

        <div class="card-header">
          <h6 class="card-subtitle text-muted">mettre Ã  jour</h6>
                  
          <div class="card-body">

    	      <%= form_for @item, url: administration_item_url(@item) do |f| %>
                <div class="form-group">
                  <%= f.label "Changer le nom du produit:" %> <br>
    	            <%= f.text_field :name %> <br>
                </div>
                <div class="form-group">
                  <%= f.label "Description produit" %> <br>
                  <%= f.text_area :description %> <br>
                </div>
                <div class="form-group">
                  <%= f.label "prix" %> <br>
                  <%= f.text_field :original_price %> <br>
                </div>
                <div class="form-group">
                  <%= f.label "image par adresse web" %> <br>
                  <%= f.text_area :photo %> <br>
                </div>
                  <%= f.submit "Edit item", class: "btn btn-info" %>
              <% end %>

              <%= link_to "Delete this item", item_path(@item), method: :delete, class: "btn btn-danger" %>

          </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</div>